# #---Initialization---# #

exec_always --no-startup-id xrdb -merge ~/.Xresources
exec_always --no-startup-id picom --experimental-backends -b
exec_always --no-startup-id touchegg
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Touchpad settings
exec_always --no-startup-id synclient HorizTwoFingerScroll=1
exec_always --no-startup-id synclient MinSpeed=2 MaxSpeed=2.75 AccelFactor=0.1
exec_always --no-startup-id synclient TapButton1=1 TapButton2=3 TapButton3=0
exec_always --no-startup-id synclient VertScrollDelta=-120 HorizScrollDelta=-120
exec_always --no-startup-id synclient PalmDetect=1 PalmMinWidth=140 PalmMinZ=150 
exec_always --no-startup-id synclient RightButtonAreaLeft=0 RightButtonAreaTop=0

# #---Basic Definitions---# #
smart_gaps on
smart_borders on
set $inner_gaps 15
set $outer_gaps 0
set $term --no-startup-id alacritty
set $mod Mod4
set $alt Mod1
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $lock betterlockscreen -l blur
set $suspend sudo systemctl suspend
set $hibernate sudo -A systemctl hibernate
set $sizepx 15
set $sizeppt 1
set $monscript displays

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# use workspaces on different monitors
workspace "1" output DVI-I-2-2 eDP1
workspace "2" output DVI-I-2-2 eDP1
workspace "3" output DVI-I-2-2 eDP1
workspace "4" output DVI-I-2-2 eDP1
workspace "5" output DVI-I-2-2 eDP1
workspace "6" output DVI-I-1-1 HDMI-2 eDP1
workspace "7" output DVI-I-1-1 HDMI-2 eDP1
workspace "8" output DVI-I-1-1 HDMI-2 eDP1
workspace "9" output DVI-I-1-1 HDMI-2 eDP1
workspace "0" output DVI-I-1-1 HDMI-2 eDP1

for_window [window_role="GtkFileChooserDialog"] resize set 1000 700
for_window [window_role="GtkFileChooserDialog"] move position center

for_window [class="Blueman-manager"] floating enable
for_window [class="Blueman-manager"] resize set 800 600
for_window [class="Blueman-manager"] move position center

for_window [class="Pavucontrol"] floating enable
for_window [class="Pavucontrol"] resize set 800 700
for_window [class="Pavucontrol"] move position center

for_window [class="Bitwarden" instance="Places"] floating enable

# #---Window borders---# #
# class                 border  backgr. text    indicator child_border
client.focused          #333333 #000000 #dddddd #ffffff   #353659
client.focused_inactive #333333 #000000 #333333 #484e50   #201f3d
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

# Assign Workspaces:
# assign [class="Brave"] $ws1
# assign [class="Chromium"] $ws2
# assign [class="discord"] $ws8
# for_window [class="Spotify"] move to workspace $ws9

# #---Gaps---# #
for_window [class="^.*"] border pixel 2
gaps inner $inner_gaps
gaps outer $outer_gaps

# #---Function Buttons---# #
bindsym $mod+F1 restart
bindsym XF86WLAN exec $term -e nmtui
bindsym XF86Bluetooth exec $term -e nmtui

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% # increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% # decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# #---Monitor Bindings---# #
bindsym $mod+$alt+control+1 exec $monscript --undocked
bindsym $mod+$alt+control+2 exec $monscript --homedock
bindsym $mod+$alt+control+4 exec $monscript --workdock

# #---Special Key Bindings---# #
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec $term --working-directory  $(xcwd)

bindsym $mod+Escape exec --no-startup-id $suspend
bindsym $mod+Shift+Escape exec --no-startup-id $lock

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+o restart

set $lightamt 5
set $fade 150000
bindsym XF86MonBrightnessUp exec --no-startup-id sudo brillo -q -u $fade -A $lightamt
bindsym XF86MonBrightnessDown exec --no-startup-id sudo brillo -q -u $fade -U $lightamt

bindsym Print exec --no-startup-id screenshot --select

# #---Letter Key Bindings---# #
bindsym $mod+q [con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q [con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

# a
bindsym $mod+a exec --no-startup-id pavucontrol

# b
bindsym $mod+b exec --no-startup-id blueman-manager

# c
bindsym $mod+c exec --no-startup-id rofi -show calc -modi calc -no-show-match -no-sort

# e
bindsym $mod+e exec --no-startup-id rofi -show emoji

# t
bindsym $mod+t layout tabbed
bindsym $mod+Shift+t exec --no-startup-id teams --disable-seccomp-filter-sandbox

# i
bindsym $mod+i fullscreen disable; floating enable; resize set 500 500; sticky enable; move position 4792 53

# s
bindsym $mod+s layout splith

# f
bindsym $mod+f floating toggle
bindsym $mod+shift+f fullscreen toggle

# h
bindsym $mod+h focus left
bindsym $mod+Shift+h move left 30
bindsym $mod+Ctrl+h resize shrink width $sizepx px or $sizeppt ppt

# j
bindsym $mod+j focus down
bindsym $mod+Shift+j move down 30
bindsym $mod+Ctrl+j resize shrink height $sizepx px or $sizeppt ppt

# k
bindsym $mod+k focus up
bindsym $mod+Shift+k move up 30
bindsym $mod+Ctrl+k resize grow height $sizepx px or $sizeppt ppt

# l
bindsym $mod+l focus right
bindsym $mod+Shift+l move right 30
bindsym $mod+Ctrl+l resize grow width $sizepx px or $sizeppt ppt

# p
bindsym $mod+p exec --no-startup-id picom -b
bindsym $mod+Shift+p exec --no-startup-id killall picom

# #---Workspace Bindings---# #
bindsym $mod+space              exec --no-startup-id rofi -show-icons -show drun
bindsym $mod+Tab                exec --no-startup-id rofi -show-icons -show window
bindsym $alt+comma              workspace prev
bindsym $alt+period             workspace next
bindsym $mod+apostrophe         split horizontal ;; exec $term
bindsym $mod+slash              split vertical ;; exec $term
bindsym $alt+space              workspace back_and_forth

# Assigning autofloat
for_window [title=".*Emulator.*"] floating enable

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

